union CommercialPromotionType = Discount | FreeProduct

type CommercialPromotion {
  id: ID!
  description: String!
  type: CommercialPromotionType!
}

type DiscountStep {
  from: Int!
  to: Int
  value: Money!
  unitValue: Money!
  percentage: Float!
}

type Discount {
  steps: [DiscountStep!]!
}

type FreeProduct {
  id: ID!
  title: String!
  images: [Image!]!
  display: Display!
  favorite: Boolean!
}